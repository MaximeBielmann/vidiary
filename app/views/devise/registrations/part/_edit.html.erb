<div class="container container-signin">
        <div class="row signin">
            <div class="col-md-2 col-sm-12">
                
            </div>
            <div class="col-md-8 col-sm-12">
          
            <h1 class="text-center">Modifier mon compte</h1>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="field">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, class: "form-control", autofocus: true, autocomplete: "last_name" %>
            </div>
            
            <div class="field">
                <%= f.label :first_name %><br />
                <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "first_name" %>
            </div>
            
            <div class="field">
                <%= f.label :adress %><br />
                <%= f.text_field :user_adress, class: "form-control", autofocus: true, autocomplete: "user_adress" %>
            </div>
            
            
            <div class="field">
                <%= f.label :zip_code %><br />
                <%= f.number_field :user_zip, class: "form-control", autofocus: true, autocomplete: "user_zip" %>
            </div>
            
            <div class="field">
                <%= f.label :city %><br />
                <%= f.text_field :user_city, class: "form-control", autofocus: true, autocomplete: "user_city" %>
            </div>
            
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>
          
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>En attente de confirmation pour : <%= resource.unconfirmed_email %></div>
            <% end %>
          
            <div class="field">
              <%= f.label :mot_de_passe %> <i>(laissez vide si vous ne souhaitez pas changer)</i><br />
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> caractères minimum</em>
              <% end %>
            </div>
          
            <div class="field">
              <%= f.label :confirmation_mot_de_passe %><br />
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>
          
            <div class="field">
              <%= f.label :mot_de_passe_actuel %> <i>(vous devez valider votre mot de passe actuel pour confirmer les changements)</i><br />
              <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
            </div>
          
            <div class="actions">
              <%= f.submit "Mettre à jour", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
            
        </div>
    </div>
</div>

